{
  "name": "Smart Tab Grouper",
  "description": "Smartly groups Chrome tabs by domain with auto-grouping, duplicate cleanup, and sorting",
  "version": "3.0.0",
  "manifest_version": 3,

  "permissions": ["tabs", "tabGroups", "storage"],

  "background": {
    "service_worker": "background/background.js"
  },

  "action": {
    "default_popup": "popup/popup.html"
  },

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
